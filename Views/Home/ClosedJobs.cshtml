<h1 class="text-center fontHead">Closed Jobs</h1>
<hr class="colorhr">

<br>
<br>

    <div style="overflow-x:auto;">
    <table class="table table-hover">
    <thead>
        <tr>
        <th scope="col">#</th>
        <th scope="col">Company</th>
        <th scope="col">Position</th>
        <th scope="col">Website</th>
        <th scope="col">Date Closed</th>
        <th scope="col">Status</th>
        <th scope="col">Action</th>
        </tr>
    </thead>
        <tbody>
                @{
                    int Numero = 0;
                    foreach(Job X in @Model)
                    {
                        Numero++;
                        <tr>
                        <th scope="row">@Numero</th>
                            <td>@X.Company.ToUpper()</td>
                            <td>@X.Position</td>
                            <td>@X.Website</td>
                            <td>@X.RDate.ToShortDateString()</td>
                            <td class="status">
                                <form action="/updatestatusfromclosed/@X.JobId" method="post">
                                    @{
                                        if(@X.Status == "Application Sent")
                                        {
                                            <select name="Status" id="Status" class="applied text-center form-control" onchange="this.form.submit()">
                                                <option value="Application Sent" class="applied">Application Sent</option>
                                                <option value="Contact Made" class="contact">Contact Made</option>
                                                <option value="Interview"class="interview">Interview</option>
                                                <option value="Offer Made" class="offer">Offer Made</option>
                                            </select>
                                        } else if(@X.Status == "Contact Made"){
                                            <select name="Status" id="Status" class="contact text-center form-control" onchange="this.form.submit()">
                                                <option value="Contact Made" class="contact">Contact Made</option>
                                                <option value="Interview"class="interview">Interview</option>
                                                <option value="Offer Made" class="offer">Offer Made</option>
                                                <option value="Application Sent" class="applied">Application Sent</option>
                                            </select>
                                        } else if(@X.Status == "Interview"){
                                            <select name="Status" id="Status" class="interview text-center form-control" onchange="this.form.submit()">
                                                <option value="Interview"class="interview">Interview</option>
                                                <option value="Offer Made" class="offer">Offer Made</option>
                                                <option value="Application Sent" class="applied">Application Sent</option>
                                                <option value="Contact Made" class="contact">Contact Made</option>
                                            </select>
                                        } else if(@X.Status == "Offer Made"){
                                            <select name="Status" id="Status" class="offer text-center form-control" onchange="this.form.submit()">
                                                <option value="Offer Made" class="offer">Offer Made</option>
                                                <option value="Application Sent" class="applied">Application Sent</option>
                                                <option value="Contact Made" class="contact">Contact Made</option>
                                                <option value="Interview"class="interview">Interview</option>
                                            </select>
                                        } else if(@X.Status == "Closed Job"){
                                            <select name="Status" id="Status" class="closed text-center form-control" onchange="this.form.submit()">
                                                <option value="Closed Job" class="closed">Closed Job</option>
                                                <option value="Offer Made" class="offer">Offer Made</option>
                                                <option value="Application Sent" class="applied">Application Sent</option>
                                                <option value="Contact Made" class="contact">Contact Made</option>
                                                <option value="Interview"class="interview">Interview</option>
                                            </select>
                                        } 
                                    }
                                </form>
                            </td>
                            <td>
                                <a href="/closed_thisjob/@X.JobId" class="expand btn btn-outline-primary">Expand</a>
                                <a href="/closed_edit/@X.JobId" class="expand btn btn-outline-warning">Edit</a>
                                <a href="/deletejob/@X.JobId" class="expand btn btn-outline-danger">DELETE</a>
                            </td>
                        </tr>
                    }
                }
        </tbody>
    
    </table>
    </div>
</div>


